<%- include('../../partials/head' , { title: 'Haberler' }) %>
<%- include('../../partials/header') %>

<div class="container mt-5">
    <div class="row newsRow">
        <% if (news && news.length) { %>
            <% news.forEach(function(item) { %>
            <div class="col-md-6 col-sm-6 col-lg-3 news news-<%= item.id %> mt-2">
                <div class="card card-block">
                    <p class="card-title text-center text-primary mt-2"><i class="material-icons">Ekleyen: </i><p class="text-center fw-bold"><%= item.user.email %></p></p>
                    <img src="/<%= item.image %>" alt="Photo of sunset">
                    <h5 class="card-title mt-3 mb-3 text-center"><%= item.title %></h5>
                    <div class="text-center mb-3">
                        <a href="/news/edit/<%= item.id %>" class="btn btn-primary">Düzenle</a>
                        <a href="/delete/<%= item.id %>" data-id="<%= item.id %>" class="btn btn-danger delete-news">Sil</a>
                    </div>
                </div>
            </div>
            <% }); %>
        <% } else { %>
            <p class="text-center h1">Haber bulunamadı</p>
        <% } %>

    </div>

</div>

<%- include('../../partials/footer') %>
